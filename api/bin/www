#!/usr/bin/env node

const app = require('../app'); // ç¡®ä¿ app.js æ­£ç¡®åŠ è½½
const http = require('http');
const path = require('path');
const express = require('express');
const cors = require('cors');
const dotenv = require('dotenv');

dotenv.config();

const PORT = process.env.PORT || 5000;
app.set('port', PORT);

// âœ… å…è®¸ CORSï¼Œç¡®ä¿å‰ç«¯å¯ä»¥è®¿é—®å›¾ç‰‡
app.use(cors({
  origin: '*',
  methods: ['GET', 'POST', 'OPTIONS'],
  allowedHeaders: ['Content-Type']
}));

// âœ… ç¡®ä¿ Express æ‰˜ç®¡ `uploads` ç›®å½•
const uploadsPath = path.join(__dirname, '../routes/uploads');
console.log(`ğŸ“‚ Serving static files from: ${uploadsPath}`);
app.use('/uploads', express.static(uploadsPath));

const server = http.createServer(app);

// âœ… ç›‘å¬ç«¯å£
server.listen(PORT, () => {
  console.log(`âœ… Server running on http://localhost:${PORT}`);
});
server.on('error', onError);

// âœ… å¤„ç†é”™è¯¯
function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  const bind = `Port ${PORT}`;
  
  switch (error.code) {
    case 'EACCES':
      console.error(`âŒ ${bind} requires elevated privileges`);
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(`âŒ ${bind} is already in use`);
      process.exit(1);
      break;
    default:
      throw error;
  }
}
